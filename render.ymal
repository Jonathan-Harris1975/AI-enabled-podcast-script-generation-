services:
  - type: web
    name: podcast-script-api
    env: node
    plan: free
    autoDeploy: true
    buildCommand: "npm ci"
    startCommand: "node index.js"
    envVars:
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 3000
      - key: OPENAI_MODEL
        value: gpt-4o-mini
      # Add OPENAI_API_KEY in the Render dashboard
